<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :image, as: :file %>
    <%= f.input :category, :label => "category", :collection => ['Retail', 'Tech', 'Vehicles'] %>
    <%= f.input :description %>
    <%= f.input :quantity %>
    <%= f.input :rating,:label => "Rating", :collection => [1,2,3,4,5] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
